<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Intelicense.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Intelicense.Models"
    mc:Ignorable="d"
    Title="Intelicense">

    <Grid MinWidth="720" MinHeight="600" Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button
                Content="Get License Info"
                Command="{Binding GetLicenseInfoCommand}" />
            <CheckBox
                Content="Use PowerShell as fallback"
                IsChecked="{Binding UsePowerShellFallback, Mode=TwoWay}" />
            <CheckBox
                Content="Show sensitive keys (requires confirmation)"
                IsChecked="{Binding ShowSensitiveKeys, Mode=TwoWay}" />
            <ProgressRing
                Width="28"
                Height="28"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                IsActive="{Binding IsBusy}"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="0,16" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="12">
                <StackPanel.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="IsReadOnly" Value="True" />
                        <Setter Property="TextWrapping" Value="Wrap" />
                    </Style>
                    <DataTemplate DataType="{x:Type models:SppLicenseEntry}">
                        <Border
                            Margin="0,0,0,8"
                            Padding="8"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel>
                                <TextBlock
                                    FontWeight="Bold"
                                    Text="{Binding Name, TargetNullValue=Unnamed license entry}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    TextWrapping="Wrap"
                                    Text="{Binding Description}"
                                    Visibility="{Binding Description, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,6,0,0"
                                    FontFamily="Consolas"
                                    Text="{Binding ActivationId, StringFormat=Activation ID: {0}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Text="{Binding LicenseStatus, StringFormat=Status: {0}}"
                                    Visibility="{Binding LicenseStatus, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    TextWrapping="Wrap"
                                    Text="{Binding LicenseMessage}"
                                    Visibility="{Binding LicenseMessage, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Text="{Binding ProductKeyChannel, StringFormat=Channel: {0}}"
                                    Visibility="{Binding ProductKeyChannel, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Text="{Binding PartialProductKey, StringFormat=Partial key: {0}}"
                                    Visibility="{Binding PartialProductKey, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Text="{Binding ExtendedProductId, StringFormat=Extended PID: {0}}"
                                    Visibility="{Binding ExtendedProductId, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Text="{Binding ProductId, StringFormat=Product ID: {0}}"
                                    Visibility="{Binding ProductId, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Text="{Binding OfflineInstallationId, StringFormat=Installation ID: {0}}"
                                    Visibility="{Binding OfflineInstallationId, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock Margin="0,2,0,0" Text="{Binding PhoneActivationAvailable, StringFormat=Phone activation available: {0}}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PhoneActivationAvailable}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Text="{Binding GraceExpiry, StringFormat=Grace expires: {0:yyyy-MM-dd HH:mm:ss zzz}}"
                                    Visibility="{Binding GraceExpiry, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Text="{Binding EvaluationExpiryUtc, StringFormat=Evaluation expiry (UTC): {0:yyyy-MM-dd HH:mm:ss}}"
                                    Visibility="{Binding EvaluationExpiryUtc, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <ItemsControl
                                    Margin="0,4,0,0"
                                    ItemsSource="{Binding Notes}"
                                    Visibility="{Binding Notes, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Margin="0,2,0,0"
                                                TextWrapping="Wrap"
                                                Text="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </StackPanel.Resources>

                <TextBox Header="Product Name" Text="{Binding LicenseInfo.ProductName}" />
                <TextBox Header="Edition ID" Text="{Binding LicenseInfo.EditionId}" />
                <TextBox Header="Product ID" Text="{Binding LicenseInfo.ProductId}" />
                <TextBox Header="Current Build" Text="{Binding LicenseInfo.CurrentBuild}" />
                <TextBox Header="Installation Type" Text="{Binding LicenseInfo.InstallationType}" />
                <TextBox Header="Partial Product Key" Text="{Binding LicenseInfo.PartialProductKey}" />
                <TextBox Header="OA3 (MSDM) Key" Text="{Binding LicenseInfo.Oa3MsdmDisplayKey}" />
                <TextBox Header="MSDM Raw Dump (Base64)" Text="{Binding LicenseInfo.Oa3MsdmRawDumpBase64}" />
                <TextBox Header="OA3 Original Product Key" Text="{Binding LicenseInfo.Oa3OriginalProductKey}" />
                <TextBox Header="Decoded Product Key" Text="{Binding LicenseInfo.DecodedProductKey}" />
                <TextBox Header="Product Type Code" Text="{Binding ProductTypeDisplay}" />
                <TextBox Header="License Status" Text="{Binding LicenseInfo.LicenseStatus}" />
                <TextBox
                    Header="Retrieval Sources"
                    MinHeight="120"
                    AcceptsReturn="True"
                    Text="{Binding RetrievalSourcesDisplay}" />
                <TextBox
                    Header="Diagnostic Notes"
                    MinHeight="120"
                    AcceptsReturn="True"
                    Text="{Binding LicenseInfo.Notes}"
                    Visibility="{Binding LicenseInfo.Notes, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                <GroupBox Header="Windows Licenses">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LicenseInfo.WindowsLicenses}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding LicenseInfo.WindowsLicenses.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </GroupBox.Style>
                    <ItemsControl ItemsSource="{Binding LicenseInfo.WindowsLicenses}" />
                </GroupBox>
                <GroupBox Header="Office Licenses">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LicenseInfo.OfficeLicenses}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding LicenseInfo.OfficeLicenses.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </GroupBox.Style>
                    <ItemsControl ItemsSource="{Binding LicenseInfo.OfficeLicenses}" />
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <Button
                Content="Export to JSON"
                Command="{Binding ExportToJsonCommand}" />
            <Button
                Content="Copy to Clipboard"
                Command="{Binding CopyToClipboardCommand}" />
            <TextBlock
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                Text="{Binding StatusMessage}" />
        </StackPanel>
    </Grid>
</Window>
