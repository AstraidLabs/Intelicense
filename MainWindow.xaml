<?xml version="1.0" encoding="utf-8"?>
<ui:Window
    x:Class="Intelicense.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:Microsoft.UI.Xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:models="using:Intelicense.Models"
    mc:Ignorable="d"
    Title="Intelicense">

    <Grid MinWidth="720" MinHeight="600" Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button
                Content="Get License Info"
                Command="{Binding GetLicenseInfoCommand}" />
            <CheckBox
                Content="Use PowerShell as fallback"
                IsChecked="{Binding UsePowerShellFallback, Mode=TwoWay}" />
            <CheckBox
                Content="Show sensitive keys (requires confirmation)"
                IsChecked="{Binding ShowSensitiveKeys, Mode=TwoWay}" />
            <ProgressRing
                Width="28"
                Height="28"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                IsActive="{Binding IsBusy}"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="0,16" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="12">
                <StackPanel.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="IsReadOnly" Value="True" />
                        <Setter Property="TextWrapping" Value="Wrap" />
                    </Style>
                    <DataTemplate x:Key="SppLicenseEntryTemplate" x:DataType="models:SppLicenseEntry">
                        <Border
                            Margin="0,0,0,8"
                            Padding="8"
                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel>
                                <TextBlock
                                    FontWeight="Bold"
                                    Text="{Binding Name, TargetNullValue=Unnamed license entry}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    TextWrapping="Wrap"
                                    Text="{Binding Description}"
                                    Visibility="{Binding Description, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock Margin="0,6,0,0" FontFamily="Consolas">
                                    <Run Text="Activation ID: " />
                                    <Run Text="{Binding ActivationId}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding LicenseStatus, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="Status: " />
                                    <Run Text="{Binding LicenseStatus}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    TextWrapping="Wrap"
                                    Text="{Binding LicenseMessage}"
                                    Visibility="{Binding LicenseMessage, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding ProductKeyChannel, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="Channel: " />
                                    <Run Text="{Binding ProductKeyChannel}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding PartialProductKey, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="Partial key: " />
                                    <Run Text="{Binding PartialProductKey}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding ExtendedProductId, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="Extended PID: " />
                                    <Run Text="{Binding ExtendedProductId}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding ProductId, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="Product ID: " />
                                    <Run Text="{Binding ProductId}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding OfflineInstallationId, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="Installation ID: " />
                                    <Run Text="{Binding OfflineInstallationId}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding PhoneActivationAvailable, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Run Text="Phone activation available: " />
                                    <Run Text="{Binding PhoneActivationAvailable}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding GraceExpiry, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Run Text="Grace expires: " />
                                    <Run Text="{Binding GraceExpiry, Converter={StaticResource DateTimeOffsetToStringConverter}, ConverterParameter='yyyy-MM-dd HH:mm:ss zzz'}" />
                                </TextBlock>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    Visibility="{Binding EvaluationExpiryUtc, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Run Text="Evaluation expiry (UTC): " />
                                    <Run Text="{Binding EvaluationExpiryUtc, Converter={StaticResource DateTimeOffsetToStringConverter}, ConverterParameter='yyyy-MM-dd HH:mm:ss'}" />
                                </TextBlock>
                                <ItemsControl
                                    Margin="0,4,0,0"
                                    ItemsSource="{Binding Notes}"
                                    Visibility="{Binding Notes, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Margin="0,2,0,0"
                                                TextWrapping="Wrap"
                                                Text="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </StackPanel.Resources>

                <TextBox Header="Product Name" Text="{Binding LicenseInfo.ProductName}" />
                <TextBox Header="Edition ID" Text="{Binding LicenseInfo.EditionId}" />
                <TextBox Header="Product ID" Text="{Binding LicenseInfo.ProductId}" />
                <TextBox Header="Current Build" Text="{Binding LicenseInfo.CurrentBuild}" />
                <TextBox Header="Installation Type" Text="{Binding LicenseInfo.InstallationType}" />
                <TextBox Header="Partial Product Key" Text="{Binding LicenseInfo.PartialProductKey}" />
                <TextBox Header="OA3 (MSDM) Key" Text="{Binding LicenseInfo.Oa3MsdmDisplayKey}" />
                <TextBox Header="MSDM Raw Dump (Base64)" Text="{Binding LicenseInfo.Oa3MsdmRawDumpBase64}" />
                <TextBox Header="OA3 Original Product Key" Text="{Binding LicenseInfo.Oa3OriginalProductKey}" />
                <TextBox Header="Decoded Product Key" Text="{Binding LicenseInfo.DecodedProductKey}" />
                <TextBox Header="Product Type Code" Text="{Binding ProductTypeDisplay}" />
                <TextBox Header="License Status" Text="{Binding LicenseInfo.LicenseStatus}" />
                <TextBox
                    Header="Retrieval Sources"
                    MinHeight="120"
                    AcceptsReturn="True"
                    Text="{Binding RetrievalSourcesDisplay}" />
                <TextBox
                    Header="Diagnostic Notes"
                    MinHeight="120"
                    AcceptsReturn="True"
                    Text="{Binding LicenseInfo.Notes}"
                    Visibility="{Binding LicenseInfo.Notes, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                <muxc:Expander
                    Header="Windows Licenses"
                    Visibility="{Binding LicenseInfo.WindowsLicenses, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                    <ItemsControl
                        ItemsSource="{Binding LicenseInfo.WindowsLicenses}"
                        ItemTemplate="{StaticResource SppLicenseEntryTemplate}" />
                </muxc:Expander>
                <muxc:Expander
                    Header="Office Licenses"
                    Visibility="{Binding LicenseInfo.OfficeLicenses, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                    <ItemsControl
                        ItemsSource="{Binding LicenseInfo.OfficeLicenses}"
                        ItemTemplate="{StaticResource SppLicenseEntryTemplate}" />
                </muxc:Expander>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <Button
                Content="Export to JSON"
                Command="{Binding ExportToJsonCommand}" />
            <Button
                Content="Copy to Clipboard"
                Command="{Binding CopyToClipboardCommand}" />
            <TextBlock
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                Text="{Binding StatusMessage}" />
        </StackPanel>
    </Grid>
</ui:Window>
